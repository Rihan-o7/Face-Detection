import sys
import cv2
import time
import mediapipe as mp

mp_face_detection = mp.solutions.face_detection
mp_drawing = mp.solutions.drawing_utils

# Choose model_selection=0 for near-range (webcam), 1 for full-range
with mp_face_detection.FaceDetection(model_selection=0, min_detection_confidence=0.7) as face_detection:
    # On Windows you can use cv2.CAP_DSHOW: cv2.VideoCapture(0, cv2.CAP_DSHOW)
    cap = cv2.VideoCapture(0)

    if not cap.isOpened():
        print("ERROR: Could not open webcam.")
        sys.exit(1)

    prev_frame_time = None
    print("MediaPipe Face Detection started. Press 'q' to quit.")

    try:
        while True:
            ret, frame = cap.read()
            if not ret or frame is None:
                print("Warning: frame capture failed, retrying...")
                continue

            frame = cv2.flip(frame, 1)  # mirror

            # Convert to RGB and mark as not-writeable for performance
            rgb_frame = cv2.cvtColor(frame, cv2.COLOR_BGR2RGB)
            rgb_frame.flags.writeable = False
            results = face_detection.process(rgb_frame)
            rgb_frame.flags.writeable = True

            # Draw detections on the original BGR frame
            if results and results.detections:
                for detection in results.detections:
                    mp_drawing.draw_detection(frame, detection)

            # FPS calculation (defensive against division by zero)
            new_frame_time = time.time()
            if prev_frame_time is None:
                fps = 0.0
            else:
                elapsed = new_frame_time - prev_frame_time
                fps = 1.0 / elapsed if elapsed > 1e-6 else float('inf')
            prev_frame_time = new_frame_time

            cv2.putText(frame, f"FPS: {int(fps)} (MediaPipe)", (10, 30),
                        cv2.FONT_HERSHEY_SIMPLEX, 1, (255, 0, 0), 2)

            cv2.imshow('MediaPipe Face Detection', frame)

            # quit on 'q'
            if cv2.waitKey(1) & 0xFF == ord('q'):
                print("Quit requested - exiting.")
                break

    except KeyboardInterrupt:
        print("\nInterrupted by user (KeyboardInterrupt). Exiting...")

    finally:
        cap.release()
        cv2.destroyAllWindows()
        print("Resources released.")
